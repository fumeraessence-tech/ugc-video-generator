# Redis
REDIS_URL="redis://localhost:6379/0"

# Google Gemini API
GEMINI_API_KEY="your-gemini-api-key-here"

# Google Cloud Storage
GCS_BUCKET="ugcgen-assets"
GCS_PROJECT_ID="ugcgen-project"
GCS_CREDENTIALS_PATH=""

# Consistency Scoring
CONSISTENCY_MODEL="gemini-2.5-flash"
CONSISTENCY_THRESHOLD="0.75"
CONSISTENCY_FRAME_SAMPLE_RATE="1"

# Local Storage Fallback
LOCAL_STORAGE_ROOT="frontend/public/uploads"

# Celery Configuration
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# Supabase Configuration
SUPABASE_URL="your-supabase-url-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"
SUPABASE_JWT_SECRET="your-supabase-jwt-secret-here"

# Application Settings
APP_VERSION="0.1.0"
DEBUG="false"
FRONTEND_URL="http://localhost:3000"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
CORS_ALLOW_CREDENTIALS="true"

# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s [%(levelname)s] %(name)s: %(message)s"
LOG_FILE=""

# Celery Worker Mode
USE_CELERY="false"

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_DEFAULT_RPM="60"
RATE_LIMIT_GENERATION_RPM="5"
RATE_LIMIT_UPLOAD_RPM="20"
RATE_LIMIT_BURST_MULTIPLIER="1.5"
RATE_LIMIT_WINDOW_SECONDS="60"

# Usage Quotas (per user per day)
USAGE_QUOTA_DAILY_GENERATIONS="50"
USAGE_QUOTA_DAILY_STORYBOARDS="100"
USAGE_QUOTA_DAILY_SCRIPTS="200"
